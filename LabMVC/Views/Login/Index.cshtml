@{
    ViewBag.Title = "Home Page";
}
@using LabWebForms.Models;
@using LabMVC.ModelViews;

<div class="jumbotron" style="height: 390px;">
    <h1>Autenticação</h1>

    <hr />

    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form action="/login/logar" method="post">
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" class="form-control" name="login" placeholder="User Name">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="senha" class="form-control" placeholder="Password">
                    </div>

                    @if (Model != null && !string.IsNullOrEmpty(((ErroModelView)Model).Mensagem))
                    {
                    <div class="alert alert-danger" role="alert">
                        @(((ErroModelView)Model).Mensagem)
                    </div>
                    }

                    <button type="submit" class="btn btn-black" style="border: 1px solid #c0c0c0;">Login</button>
                    <button id="botao_cadastro" type="button" class="ml-2 btn btn-primary">Cadastrar-se</button>
                </form>
            </div>
        </div>
    </div>
</div>