@{
    ViewBag.Title = "Home Page";
}
@using LabWebForms.Models;

<div class="jumbotron">
    <h2>Listagem de clientes</h2>

    <div class="d-flex justify-content-between">
        <div class="col-md-6"><span style="font-size:25px;">Clientes cadastrados: @ViewBag.clientes.Count</span></div>

        <div class="col-md-6">
            <button class="btn btn-primary pull-right">
                <i class="fa-solid fa-user-plus"></i> Cadastrar Cliente
                </button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Cidade</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cliente cliente in ViewBag.clientes)
            {
                <tr>
                    <th scope="row">@cliente.Id</th>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Telefone</td>
                    <td>@cliente.Cidade</td>
                    <td>
                        <button class="btn btn-warning" onclick="atualizarUsuario(@cliente.Id)">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                        <button class="btn btn-danger" onclick="excluiUsuario(@cliente.Id)">
                            <i class="fa-solid fa-eraser"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>